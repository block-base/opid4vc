{
  "name": "opid4vc",
  "version": "0.0.1",
  "license": "NOLICENSE",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "run-p build:*",
    "build:wallet": "yarn workspace @opid4vc/wallet build",
    "lint": "run-p lint:*",
    "lint:issuer": "yarn workspace @opid4vc/issuer lint",
    "lint:verifier": "yarn workspace @opid4vc/verifier lint",
    "lint:wallet": "yarn workspace @opid4vc/wallet lint"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.--write": "prettier --write"
  }
}
